{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [ "dom", "es5", "es2015.promise" ],
    "target": "es5",
    "experimentalDecorators": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@mi/*": ["assets/scripts/mi/*"]
    }
  },
  "exclude": [
    "node_modules",
    "library",
    "local",
    "temp",
    "build",
    "settings"
  ]
}